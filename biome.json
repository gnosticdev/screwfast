{
    "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
    "files": {
        "ignore": [
            "**/node_modules",
            "**/_![__tests__]",
            "**/dist",
            "**/.wrangler",
            "**/.astro",
            "**/.vscode",
            "**/.DS_Store"
        ],
        "include": ["**/*[.js,.jsx,.ts,.tsx,.astro,.css,.json,.jsonc]"]
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": true
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "semicolons": "asNeeded",
            "jsxQuoteStyle": "single"
        },
        "globals": ["Astro"]
    },
    "json": {
        "parser": {
            "allowComments": true,
            "allowTrailingCommas": false
        }
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "style": {
                "noNonNullAssertion": "off"
            },
            "a11y": {
                "useMediaCaption": "off"
            },
            "nursery": {
                "useSortedClasses": "warn",
                "noDuplicateJsonKeys": "warn",
                "recommended": true
            },
            "correctness": { "useJsxKeyInIterable": "off" }
        }
    },
    "organizeImports": {
        "enabled": true
    },
    "css": {
        "formatter": {
            "enabled": true
        }
    },
    "vcs": {
        "clientKind": "git",
        "defaultBranch": "main",
        "useIgnoreFile": true,
        "enabled": true
    },
    "overrides": [
        {
            "include": ["./**/*.js"],
            "linter": {
                "enabled": false
            }
        },

        {
            "include": ["./**/*.astro", "./**/*.tsx"],
            "formatter": {
                "indentWidth": 2,
                "indentStyle": "space",
                "formatWithErrors": true,
                "enabled": true,
                "lineWidth": 120,
                "attributePosition": "multiline"
            },
            "linter": {
                "enabled": true,
                "rules": {
                    "recommended": true,
                    "style": {
                        "noNonNullAssertion": "off"
                    }
                }
            }
        }
    ]
}
